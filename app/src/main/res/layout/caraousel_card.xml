<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/home_card"
    android:orientation="vertical"
    android:paddingHorizontal="10sp"
    android:paddingVertical="10sp"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10sp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:background="@drawable/home_card_rounded_corners"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/qr_code_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/qr_code_rank"
                android:layout_width="wrap_content"
                android:text="#1"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#878787"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:background="#183c3c"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/qr_code_name"
                android:layout_width="wrap_content"
                android:text="My Code 1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="0sp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/qr_code_points"
                android:layout_width="wrap_content"
                android:text="200 PTS"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/DELETE_LOCATION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_24"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"/>
            </LinearLayout>
        </LinearLayout>
    </TableRow>
    </TableLayout>
</LinearLayout>
