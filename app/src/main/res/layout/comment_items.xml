<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#00000000"

        android:orientation="horizontal">

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/comment_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/circle"
                android:layout_gravity="center"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commentor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />
            <TableLayout
                android:layout_width="wrap_content"
                android:stretchColumns="0,1,2"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='Commented on '
                        android:layout_weight="1"
                        android:textColor="@color/comment_subheading"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/commented_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='"qr 1"'
                        android:layout_weight="1"
                        android:textColor="@color/comment_subheading_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/commented_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 3hrs ago"
                        android:layout_weight="1"
                        android:textColor="@color/comment_subheading"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/comment_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
